<Page x:Class="SystemOfTests.TestMainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SystemOfTests"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TestMainMenu">
    <Page.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="LightGreen"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#00AF64"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>
    
    <Grid Background="White">
        
        <Button Content="x" Width="20" Height="20" Margin="700,20,0,350"
         Foreground="Green" FontSize="13" FontWeight="Bold" 
         Name="ShutdownBut" Click="ShutdownBut_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="9"/>
                </Style>
            </Button.Resources>
        </Button>
        
        <StackPanel Margin="100,0,100,0">
            <TextBlock Text="Тесты" Margin="0,50,0,0"
                       HorizontalAlignment="Center" FontSize="30"/>
            
            <Button x:Name="test1" Margin="0,50,0,0" Content="База данных" 
                    Click="Test1But_Click" Height="30" Foreground="Green">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
            
            <Button x:Name="test2" Margin="0,20,0,0" Content="Язык программирования C#" 
                    Click="Test2But_Click" Height="30" Foreground="Green">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
            
            <Button x:Name="test3" Margin="0,20,0,0" Content="Машинное обучение" 
                    Click="Test3But_Click" Height="30" Foreground="Green">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button x:Name="ExitBut" Margin="510,50,0,0" Content="Выход" 
                    Click="ExitBut_Click" Height="25" Width="70" Foreground="Green">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</Page>
